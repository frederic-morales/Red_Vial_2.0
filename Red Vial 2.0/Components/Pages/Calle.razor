@rendermode InteractiveServer
@code {

    [Parameter]
    public NodoInterseccion interseccion { get; set; }

    [Parameter]
    public int Width { get; set; } = 130; // Valor por defecto

    [Parameter]
    public int Height { get; set; } = 130; // Valor por defecto
}

<style>
        .interseccion {
      position: relative;
      width: 300px;
      height: 300px;
      background-color: #88b04b; /* Césped */
      overflow: hidden;
      display: inline-block;
    }

    .carretera {
      position: absolute;
      background-color: white;
      /* background-color: #3d3d3d; */
    }

    .carretera.horizontal {
      top: 130px;
      left: 0;
      width: 300px;
      height: 40px;
      z-index: 5;
    }

    .carretera.vertical {
      left: 130px;
      top: 0;
      width: 40px;
      height: 300px;
      z-index: 10;
    }

    .container-carro{
       width:50px;
       height: auto;
       position: absolute;
/*        top: 130px;
       left: 130px; */
       z-index: 20;
    }

    .img{
        width: 100%;
        height: 100%;
    }

    .container-semaforo {
        height: 75px;
        position: absolute;
        top: 50px;
        right: 100px;
        z-index: 25;
    }

</style>

<div class="interseccion">
    <div class="carretera horizontal"></div>
    <div class="container-semaforo">
        <img class="img" src="https://static.vecteezy.com/system/resources/previews/008/852/920/non_2x/traffic-light-clip-art-free-png.png" />
    </div>
    <p class="">
        @interseccion.Info.Nombre
        @Width
        @Height
    </p>
    <div class="carretera vertical"></div>
</div>
